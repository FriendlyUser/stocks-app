@page "/stockvalues"

@using stock_notifications.Services
@using IEXSharp.Model.CoreData.StockPrices.Response
@inject IexService SampleService

<h1>Stock Data in Tabular Format</h1>



@if (stockPrices == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Volume</th>
                <th>Close</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var price in stockPrices)
            {
                <tr>
                    <td>@price.date</td>
                    <td>@price.volume</td>
                    <td>@price.close</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<HistoricalPriceResponse> stockPrices;
    // use a isLoading flag instead
    protected override async void OnInitialized()
    {
        stockPrices = await SampleService.StockPrices("AAPL");
        return;
    }
}